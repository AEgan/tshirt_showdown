<h1>Listing Showdowns</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Theme</th>
      <th>End date</th>
      <th>Created By</th
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @showdowns.each do |showdown| %>
      <tr class="showdown-list" data-link="<%= showdown_path(showdown) %>">
          <td><%= showdown.theme %></td>
          <td><%= showdown.end_date %></td>
          <td><%= showdown.user.email%></td>
          <td><%= link_to 'Edit', edit_showdown_path(showdown) if showdown.user == current_user %></td>
          <td>
            <%= link_to 'Remove', showdown_path(showdown), method: :delete, data: {confirm: 'Are you super duper sure?'} if showdown.user == current_user %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

